<h1>Log in</h1>
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :user_name %>
    <br/>
    <%= text_field_tag :user_name %>
  </p>
  <p>
    <%= label_tag :password %>
    <br/>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Log in" %>
  </p>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function(){
    $("input:text:first").focus();
  });
</script>
